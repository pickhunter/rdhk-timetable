<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="1">Type</th>
      <th colspan="1">Room</th>
      <th colspan="1">Show room occupancy</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td> <%= room.room_type.capitalize %></td>
        <td> <%= room.name %></td>
      <td><%= link_to 'Show room occupancy',  controller: 'rooms' , action: 'showroomtt', :id => room.id  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
