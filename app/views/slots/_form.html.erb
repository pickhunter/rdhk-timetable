<%= simple_form_for(@slot) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label %>
    <%= f.input :day, collection: ['Moday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'], as: :radio_buttons %>
    <%= f.input :start_time, as: :datetime %>
    <%= f.input :end_time, as: :datetime %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
